pipeline{
  agent any  
    tools{
      maven 'Maven-mine'
      jdk 'JDK11'
    }
  
  stages {
    stage('Build'){
       steps {
                sh'mvn clean package'
                    
                
            }
     }
    stage('Test'){
      steps{
        sh 'mvn test'
      }
      }
    stage("Build & SonarQube analysis") {
            agent any
            steps {
              withSonarQubeEnv('sonar-teammanagement') {
                sh 'java -version'
                sh 'mvn clean package sonar:sonar'
              }
            }
          }
           stage("Quality gate") {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }
  
   
    
     
     
       
      
  
  }
 
  }

